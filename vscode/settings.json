{
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [80],
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.wordWrapColumn": 80,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    // "editor.quickSuggestions": false
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "rubyLsp.rubyVersionManager": "custom",
  "rubyLsp.customRubyCommand": "eval \"$(mise env -s fish)\"",
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.enableExperimentalFeatures": false,
  "vscode-yaml-sort.customSortKeywords_2": ["name"],
  "gitlens.advanced.messages": {
    "suppressRebaseSwitchToTextWarning": true,
    "suppressIntegrationDisconnectedTooManyFailedRequestsWarning": true
  },
  "cSpell.userWords": [
    "andon",
    "autoscale",
    "Babylist",
    "Berkopec",
    "codegen",
    "dynos",
    "failpoint",
    "footgun",
    "frontends",
    "hudu",
    "jemalloc",
    "Judoscale",
    "MALLOC",
    "Memcachier",
    "mortemable",
    "nplusone",
    "packwerk",
    "Repli",
    "repros",
    "sidekiq",
    "sidekiqswarm",
    "speedshop",
    "srcset",
    "Terraforming",
    "Theo",
    "unindexed",
    "upsert",
    "wargame",
    "whiteboarding",
    "YJIT"
  ],
  "github.copilot.enable": {
    "*": true,
    "git-commit": false
  },
  "remote.SSH.showLoginTerminal": true,
  "remote.SSH.useLocalServer": false,
  "remote.SSH.remotePlatform": {
    "MBP-Server.local": "macOS"
  },
  "http.proxyStrictSSL":false,
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "editor.guides.bracketPairs": "active"
}
